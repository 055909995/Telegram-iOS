    name = "OverlayStatusController",
    srcs = glob([
        "Sources/**/*.swift",
    	"Impl/**/*.m",
    ]),
    headers = glob([
        "Impl/**/*.h",
    ]),
    exported_headers = glob([
        "Impl/**/*.h",
    ]),
    deps = [
    	"//submodules/Display:Display#shared",
    ],
    frameworks = [
        "$SDKROOT/System/Library/Frameworks/Foundation.framework",
        "$SDKROOT/System/Library/Frameworks/UIKit.framework",
    ],
)
